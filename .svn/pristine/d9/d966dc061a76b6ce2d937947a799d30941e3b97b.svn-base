.ulticker .jumbotron ul li a p {
    display: inline-block;
    width: 86%;
    vertical-align: top;
    margin: 0;
    line-height: 1.5em;
}
.ulticker .jumbotron ul li a p img{width:5%;}
@@media (max-width:1024px){
.ulticker .jumbotron ul li a span{display:block;width:100%; margin-bottom:10px;}
.ulticker .jumbotron ul li a p{display:block;width:100%;}
}
</style>