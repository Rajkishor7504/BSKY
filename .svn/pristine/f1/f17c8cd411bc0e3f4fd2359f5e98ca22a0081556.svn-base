body {background-color: #F5F5F5;font-size: 16px;}
h1,h2,h3,h4,h5,h6,p {font-family: 'Montserrat', sans-serif;}
img {max-width: 100%;}

.custom-tab {
    position: relative;
    border-bottom: 0px;
    z-index: 9;
}
a {
    color: map-get($colors, link);
    &:hover {
        color: map-get($colors, deeplink);
    }
}
label {
    input[type="checkbox"] {
        position: relative;
        top: 2px;
        margin-right: 5px;
    }
}
.form-control {
    border: 0px;
    border-bottom: 1px solid #ced4da;
    border-radius: 0px;
    position: relative;
    &:after {
        content: "";
        position: absolute;
        top: 100%;
        left: 0px;
        width: 100%;
        height: 1px;
        background: map-get($colors, primary);
    }
    &:focus {
        box-shadow: none;
    }
}
.input-group-append {
    .input-group-text {
        background: transparent;
        border-top: 0px;
        border-right: 0px;
        border-radius: 0px;
    }
}
.input-group-prepend {
    .input-group-text {
        background: transparent;
        border-top: 0px;
        border-left: 0px;
        border-radius: 0px;
    }
}