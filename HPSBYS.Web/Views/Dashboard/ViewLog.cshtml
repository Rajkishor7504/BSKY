
@{
    ViewBag.Title = "ViewLog";
    Layout = "~/Views/Shared/_CommonLayout.cshtml";
}
<script type="text/javascript">
    $(document).ready(function () {
        $('#path').html('View Log');
        $('.datepicker').datepicker({
            format: 'dd M yyyy',
            endDate: 'today',
            autoclose: true
        }); //code for datepicker
        $(".datepicker").datepicker("setDate", (new Date().toDateString()));             
        $('#btnSave').click(function () {           
            if (validate()) {
                var type;
                if ($('#rbWeb').is(':checked')) {
                    type = 'W';   
                    window.location.href = '@Url.Action("ReadLog", "Dashboard")?Date=' + $('#Dt').val() + '&Type=' + type               
                }
                else if ($('#rbWebAPI').is(':checked')) {
                    type = 'A';
                    window.open(ServiceURL + "/logs/" + formatDate(new Date($('#Dt').val())) + ".txt");
                }                    
            }
        });
        $('#rbWeb').click(function () {
            $('#btnSave').val('Download');
        });
        $('#rbWebAPI').click(function () {
            $('#btnSave').val('View');
        });
        function formatDate(date) {
            var monthNames = [
                "01", "02", "03",
                "04", "05", "06", "07",
                "08", "09", "10",
                "11", "12"
            ];
            var day = date.getDate();
            var monthIndex = date.getMonth();
            var year = date.getFullYear();
            return year + '-' + monthNames[monthIndex] + '-' + day;
        }
    });
    function validate() {
        if ($('#Dt').val() == '') {
            alert('Please Enter Date !!');
            $('#Dt').focus();
            return false;
        }
        else {
            return true;
        }
    }
</script>
<div class="card m-auto w-25">
    <div class="card-body p-6">
        <div class="form-group row">
            <div class="col-sm-6">
                <label for="lblPwd" class="col-sm-4 col-form-label" id="web"><b>Web</b></label>
                <input type="radio" id="rbWeb" name="App" checked />
            </div>
            <div class="col-sm-6">
                <label for="lblPwd" class="col-sm-6 col-form-label" id="web"><b>Web API</b></label>
                <input type="radio" id="rbWebAPI" name="App" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-9">
                <div class="input-group mb-3">
                    <input type="text" id="Dt" class="form-control datepicker" placeholder="dd mmm yyyy" aria-label="Username" aria-describedby="basic-addon1" maxlength="11" autofocus>
                    <div class="input-group-prepend">
                        <label for="blockingDt" class="input-group-text"><i class="fa fa-calendar"></i></label>
                    </div>                   
                </div>
            </div>
            <div class="col-sm-3">
                <input type="button" value="download" class="btn btn-outline-success" id="btnSave" />
            </div>
        </div>       
    </div>
</div>

