</html>
<script>
    $(document).ready(function () {
        if (localStorage.getItem('ReferralSlipData') != null) {
            var PackageInfo = JSON.parse(localStorage.getItem('ReferralSlipData'));
            console.log(PackageInfo);
            $('#patientName').text(PackageInfo[0].patientName);
            $('#Age').text(PackageInfo[0].age);
            $('#Gender').text(PackageInfo[0].gender);
            $('#Regd').text(PackageInfo[0].regdNo);
            $('#Urn').text(PackageInfo[0].urn);
            $('#ReferralCodeAndDate').text(PackageInfo[0].referralcodeanddate);
            $('#FormPatientName').text(PackageInfo[0].patientName);
            $('#FormPatientAge').text(PackageInfo[0].age);
            $('#FormGender').text(PackageInfo[0].gender);
            $('#FormRegd').text(PackageInfo[0].regdNo);
            $('#FormUrn').text(PackageInfo[0].urn);
            $('#FormReferralCodeAndDate').text(PackageInfo[0].referralcodeanddate);
            $('#Tohospital').text(PackageInfo[0].tohospital);
            $('#reasonforrefer').text(PackageInfo[0].reasonforrefer);
            $('#fromreferraldate').text(PackageInfo[0].fromreferraldate);
            $('#diagnosis').text(PackageInfo[0].diagnosis);
            $('#briefhistory').text(PackageInfo[0].briefhistory);
            $('#treatmentgiven').text(PackageInfo[0].treatmentgiven);
            $('#treatmentadvised').text(PackageInfo[0].treatmentadvised);
            $('#document').text(PackageInfo[0].document);
        };
        for (var i = 0; i < PackageInfo.length; i++) {
            console.log("tr", PackageInfo[i]);
            if (PackageInfo[i].vitalsign != null) {
                var AddParameter = "<tr><td class='font-weight-normal' width='50%'> " + PackageInfo[i].vitalsign + " </td><td width='50%'> " + PackageInfo[i].vitalvalue + "</td></tr>";
                $("#vitalParameterBody").append(AddParameter);
            }
        }
    });
</script>