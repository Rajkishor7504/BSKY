                            <div class="form-row pkg_grey">
                                <div class="col-lg-2">
                                    <div class="mb-2">
                                        <label class="pkg-label mb-1">From Date :</label>
                                        <input type="text" id="txtFromDate" class="form-control datepicker" />
                                    </div>
                                </div>
                                <div class="col-lg-2">
                                    <div class="mb-2">
                                        <label class="pkg-label mb-1">To Date :</label>
