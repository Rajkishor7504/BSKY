
@{
    ViewBag.Title = "adminHospitalMortalityReport";
    Layout = "~/Views/Shared/_CommonLayout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="clearfix"></div>
                    <div class="form-box-bg mb-4">
                        <ul class="nav nav-tabs custom-tab mb-4">
                            <li class="nav-item">
                                <a class="nav-link active" href="@Url.Action("HospitalMortalityReport","IPReports")">View</a>
                            </li>
                        </ul>
                        <div class="col-md-12 p-0">
                            <div class="form-row pkg_grey">
                                <div class="col-lg-3">
                                    <div class="mb-2">
                                        <label class="pkg-label mb-1">From Date :</label>
                                        <input type="text" id="txtFromDate" class="form-control datepicker" />
                                    </div>
                                </div>
                                <div class="col-lg-3">
                                    <div class="mb-2">
                                        <label class="pkg-label mb-1">To Date :</label>
                                        <input type="text" id="txtToDate" class="form-control datepicker" />
                                    </div>
                                </div>
                                <div class="col-lg-3">
                                    <div class="mb-2">
                                        <label class="pkg-label mb-1">State <b><span style="color:red">*</span></b> </label>
                                        <div>
                                            <select id="ddState" class="form-control form-group bindStates" onchange="bindDistricts(this, ddDistrict, ddHospital);">
                                                <option value="0">-Select-</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-3">
                                    <div class="mb-2">
                                        <label class="pkg-label mb-1">District <b><span style="color:red">*</span></b> </label>
                                        <div>
                                            <select id="ddDistrict" class="form-control form-group" onchange="bindHospitals(ddState, this, ddHospital);">
                                                <option value="0">-Select-</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-3">
                                    <div class="mb-2">
                                        <label class="pkg-label mb-1">Hospital <b><span style="color:red">*</span></b> </label>
                                        <div>
                                            <select id="ddHospital" class="form-control form-group">
                                                <option value="0">-Select-</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-3 d-flex justify-content-start align-items-center mt-3">
                                    <input id="btnSearch" type="button" onclick="getMortalityReport();" class="btn btn-sm btn-outline-success" value="Search">
                                </div>
                                <div class="col-lg-6  d-flex justify-content-end  align-items-center mt-3">
                                    <div class="mb-2">
                                        <label class="pkg-label mb-1"></label>
                                        <div class="form-row float-right" align="right">
                                            <button id="btnExcel" type="button" class="btn btn-outline-success btn-sm float-right" data-toggle="tooltip" title="Export To Excel">
                                                <i class="fa fa-file-excel-o"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="table-responsive mt-2">
                            <table id="grdMortalityReportDetails" class="table table-striped" style="width:100%"></table>
                        </div>
                        <!-- modal start -->
                        <div class="modal fade wow fadeInUp animated" id="popModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog modal-xl modal-dialog-scrollable" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <div class="row heading-pkg">
                                            <h5 class="mb-1">@Session["HospitalName"]</h5>
                                        </div>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        <div class="row">
                                            <div class="col-6 heading-pkg">
                                                <h5 id="popModalTitle" class="pkg-label mb-1"></h5>
                                            </div>
                                        </div>
                                        <p></p>
                                        <div id="divMortalityPackage" class="row">
                                            <div class="col-12">
                                                <h6><small>Package</small></h6>
                                                <table id="tblMortalityPackage" class="table table-striped" style="width:100%;">
                                                    <thead>
                                                        <tr>
                                                            <th scope="col">SL.No</th>
                                                            <th scope="col">Package Header Name</th>
                                                            <th scope="col">Procedure Code</th>
                                                            <th scope="col">Procedure Name</th>
                                                            <th scope="col" width="100">Blocking Date</th>
                                                            <th scope="col">Days</th>
                                                            <th scope="col">Amount Blocked</th>
                                                            <th scope="col">Total Package Cost</th>
                                                            <th scope="col">PreAuth Status</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody></tbody>
                                                </table> <hr />
                                            </div>
                                        </div>
                                        <div id="divMortalityImplant" class="row">
                                            <div class="col-12">
                                                <h6><small>Implant</small></h6>
                                                <table id="tblMortalityImplant" class="table table-striped" style="width:100%;">
                                                    <thead>
                                                        <tr>
                                                            <th scope="col">SL.No</th>
                                                            <th scope="col">Implant Name</th>
                                                            <th scope="col">Unit</th>
                                                            <th scope="col">Unit Per Cycle</th>
                                                            <th scope="col">Amount</th>
                                                            <th scope="col">Total Amount</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody></tbody>
                                                </table> <hr />
                                            </div>
                                        </div>
                                        <div id="divMortalityHed" class="row">
                                            <div class="col-12">
                                                <h6><small>High End Drug</small></h6>
                                                <table id="tblMortalityHed" class="table table-striped" style="width:100%;">
                                                    <thead>
                                                        <tr>
                                                            <th scope="col">SL.No</th>
                                                            <th scope="col">Hed Name</th>
                                                            <th scope="col">Hed Unit</th>
                                                            <th scope="col">Hed Price Per Unit</th>
                                                            <th scope="col">Hed Price</th>
                                                            <th scope="col">PreAuth</th>
                                                            <th scope="col">Total Hed Price</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody></tbody>
                                                </table> <hr />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- modal end -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/js/dtButtons.min.js"></script>
<script src="~/js/jszip.min.js"></script>
<script src="~/js/buttonsHtml5.min.js"></script>

<script>
    document.mynamespace = {};
    document.mynamespace.hospitalcode = '@HttpContext.Current.Session["HospitalCode"]';
    document.mynamespace.groupid = '@HttpContext.Current.Session["groupid"]';
    var hospitalcode = document.mynamespace.hospitalcode;
    var groupid = document.mynamespace.groupid;
</script>

@Scripts.Render("~/bundles/AdminUtility")
@Scripts.Render("~/bundles/adminhospitalmortalityreport")
