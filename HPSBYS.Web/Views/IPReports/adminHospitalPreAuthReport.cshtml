
@{
    ViewBag.Title = "adminHospitalPreAuthReport";
    Layout = "~/Views/Shared/_CommonLayout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="clearfix"></div>
                    <div class="form-box-bg mb-4">
                        <ul class="nav nav-tabs custom-tab mb-4">
                            <li class="nav-item">
                                <a class="nav-link active" href="@Url.Action("HospitalPreAuthReport","IPReports")">View</a>
                            </li>
                        </ul>
                        <div class="col-md-12 p-0">
                            <div class="form-row pkg_grey">
                                <div class="col-lg-3">
                                    <div class="mb-2">
                                        <label class="pkg-label mb-1">From Date :</label>
                                        <input type="text" id="txtFromDate" class="form-control datepicker" />
                                    </div>
                                </div>
                                <div class="col-lg-3">
                                    <div class="mb-2">
                                        <label class="pkg-label mb-1">To Date :</label>
                                        <input type="text" id="txtToDate" class="form-control datepicker" />
                                    </div>
                                </div>
                                <div class="col-lg-3">
                                    <div class="mb-2">
                                        <label class="pkg-label mb-1">URN :</label>
                                        <input type="text" id="txtUrnNo" maxlength="17" onkeypress="return inputLimiter(event,'Numbers')" class="form-control" />
                                    </div>
                                </div>
                                <div class="col-lg-3">
                                    <div class="mb-2">
                                        <label class="pkg-label mb-1">Gender :</label>
                                        <select id="ddPatientGender" class="form-control form-group">
                                            <option value="A">All</option>
                                            <option value="M">Male</option>
                                            <option value="F">Female</option>
                                            <option value="O">Others</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-lg-3">
                                    <div class="mb-2">
                                        <label class="pkg-label mb-1">Status :</label>
                                        <select id="ddPreAuthStatus" class="form-control form-group">
                                            <option value="A">All</option>
                                            <option value="B">Approved</option>
                                            <option value="C">Auto-Approved</option>
                                            <option value="D">Blocked</option>
                                            <option value="E">Pending</option>
                                            <option value="F">Rejected</option>
                                            <option value="G">Auto-Rejected</option>
                                            <option value="I">Cancelled</option>
                                            <option value="J">Expired</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-lg-3">
                                    <div class="mb-2">
                                        <label class="pkg-label mb-1">Action Taken By :</label>
                                        <select id="ddActionTakenBy" class="form-control form-group">
                                            <option value="0">-Select-</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-lg-3">
                                    <div class="mb-2">
                                        <label class="pkg-label mb-1">State :</label>
                                        <select id="ddState" class="form-control form-group bindStates" onchange="bindDistricts(this, ddDistrict, ddHospital);">
                                            <option value="0">-Select-</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-lg-3">
                                    <div class="mb-2">
                                        <label class="pkg-label mb-1">District :</label>
                                        <select id="ddDistrict" class="form-control form-group" onchange="bindHospitals(ddState, this, ddHospital);">
                                            <option value="0">-Select-</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-lg-3">
                                    <div class="mb-2">
                                        <label class="pkg-label mb-1">Hospital :</label>
                                        <select id="ddHospital" class="form-control form-group">
                                            <option value="0">-Select-</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-lg-3 d-flex justify-content-start align-items-center mt-3">
                                    <input id="btnSearch" type="button" onclick="getPreAuthReport();" class="btn btn-sm btn-outline-success" value="Search">
                                </div>
                                <div class="col-lg-6 d-flex justify-content-end align-items-center mt-3">
                                    <button id="btnExcel" type="button" class="btn btn-outline-success btn-sm float-right" data-toggle="tooltip" title="Export To Excel">
                                        <i class="fa fa-file-excel-o"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                        <div class="table-responsive mt-2">
                            <table id="grdPreAuthReportDetails" class="table table-striped preauth-tbl" style="width:100%"></table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/js/dtButtons.min.js"></script>
<script src="~/js/jszip.min.js"></script>
<script src="~/js/buttonsHtml5.min.js"></script>

<script>
    document.mynamespace = {};
    document.mynamespace.hospitalcode = '@HttpContext.Current.Session["HospitalCode"]';
    document.mynamespace.groupid = '@HttpContext.Current.Session["groupid"]';
    var groupid = document.mynamespace.groupid;
</script>

@Scripts.Render("~/bundles/AdminUtility")
@Scripts.Render("~/bundles/adminhospitalpreauthreport")
